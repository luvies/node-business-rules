{
  "name": "@luvies/business-rules",
  "version": "0.6.0",
  "description": "A JS-expression-based rules engine",
  "main": "dist/index.js",
  "repository": "https://github.com/luvies/node-business-rules",
  "author": "luvies",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist/* && tsc --project .",
    "lint": "tslint --project . && prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "fix": "tslint --project . --fix && prettier --check --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "yarn build && yarn test",
    "postpublish": "git push && git push --tags",
    "postinstall": "rm -rf ./node_modules/jsep/typings/*"
  },
  "dependencies": {
    "jsep": "^0.3.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "dist",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "business",
    "rules",
    "jsep",
    "expression"
  ],
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "setupFiles": [],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "rootDir": "./",
    "roots": [
      "<rootDir>/test"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
